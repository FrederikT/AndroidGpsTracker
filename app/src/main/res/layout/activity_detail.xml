<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Graph label -->
    <TextView
        android:id="@+id/time_per_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_per_km"/>

    <!-- Graph -->
    <ie.griffith.thuss.gpstracker.AltitudeGraph
        android:id="@+id/altitudeGraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/time_per_km"
        android:layout_marginBottom="10dp"/>

    <ie.griffith.thuss.gpstracker.SpeedGraph
        android:id="@+id/speedGraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/altitudeGraph"
        android:layout_marginBottom="10dp"/>

    <!-- Total distance travelled -->
    <TextView
        android:id="@+id/total_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speedGraph"
        android:layout_marginTop="10dp"
        android:text="@string/total_distance"/>

    <!-- Average speed -->
    <TextView
        android:id="@+id/average_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_distance"
        android:layout_marginTop="5dp"
        android:text="@string/average_speed"/>

    <!-- Time elapsed -->
    <TextView
        android:id="@+id/elapsed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/average_speed"
        android:layout_marginTop="10dp"
        android:text="@string/elapsed_time"/>

</RelativeLayout>